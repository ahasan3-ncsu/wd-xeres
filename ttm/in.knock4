#######################################
######      Cylindrical Chunks
#######################################

compute			cc all chunk/atom bin/cylinder z lower $(zhi-zlo) $((xhi-xlo)/2) $((yhi-ylo)/2) 0 $((xhi-xlo)/2) 10 units lattice

compute			tmpChunk all temp/chunk cc temp
fix				tmp all ave/time 1 5 50 c_tmpChunk[1] file tmpChunk.knock4 mode vector

compute			engChunk all pe/atom
fix				eng all ave/chunk 1 5 50 cc c_engChunk file engChunk.knock4

#######################################
######      Thermal Spike
#######################################

region			wall block $(xlo+4*v_latCons) $(xhi-4*v_latCons) $(ylo+4*v_latCons) $(yhi-4*v_latCons) &
					EDGE EDGE units box side out
group			edge region wall

## Not changing lattic temp
#velocity		spatom scale ${eff_temp}

fix				sink edge temp/csvr ${Tmp} ${Tmp} $(100.0*dt) ${seed}
#fix				sink edge temp/berendsen ${Tmp} ${Tmp} 0.5
fix				casc all nve

unfix			cent
fix				cent all recenter INIT INIT INIT

fix				av1 all ave/time 1 5 50 v_DT v_TIME v_T c_spTemp v_PE v_TE v_Pr v_Lx v_Ly v_Lz &
					v_V v_c1 v_c2 v_c3 v_c4 file spikeavg.knock4

fix				time all dt/reset 10 NULL NULL 0.01 units box

dump			2 all atom 50 dumpSpike.knock4
#dump_modify		2 every/time 0.1

thermo_style	custom step dt time temp c_spTemp pe press vol v_c1 v_c2 v_c3 v_c4 f_2tm[1] f_2tm[2]
thermo			5

run				50000
