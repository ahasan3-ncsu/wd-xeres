variable			Nx equal 20
variable			Ny equal 20
variable			Nz equal 1

fix					2tm all ttm/mod ${seed} ttparams.txt ${Nx} ${Ny} ${Nz} infile Te.in outfile 100 Te.knock4

fix					cent all recenter INIT INIT INIT

